{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2021"]
  },
  "lib": ["es2015"],
  "exclude": ["./dist/*"],
  "include": ["**/*.ts", "**/*.js", "**/*.gql", "**/*.graphql"]
}
